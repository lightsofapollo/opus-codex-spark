{
  "$schema": "https://opencode.ai/config.json",
  "lsp": false,
  "provider": {
    "openai": {
      "models": {
        "gpt-5.2": {
          "id": "gpt-5.2",
          "name": "GPT 5.2",
          "reasoningEffort": "medium",
          "limit": {
            "context": 400000,
            "output": 128000
          }
        },
        "gpt-5.3-codex-spark": {
          "id": "gpt-5.3-codex-spark",
          "name": "GPT 5.3 Codex Spark",
          "reasoningEffort": "medium",
          "limit": {
            "context": 400000,
            "output": 128000
          }
        }
      }
    },
    "cerebras": {
      "models": {
        "zai-glm-4.7": {
          "id": "zai-glm-4.7",
          "name": "GLM 4.7",
          "limit": {
            "context": 131072,
            "output": 40000
          }
        }
      }
    },
    "fireworks-ai": {
      "models": {
        "glm-5": {
          "id": "accounts/fireworks/models/glm-5",
          "name": "GLM 5"
        }
      }
    }
  },
  "default_agent": "orchestrator",
  "model": "openai/gpt-5.3-codex-spark",
  "agent": {
    "general": {
      "model": "openai/gpt-5.3-codex-spark"
    },
    "explore": {
      "model": "openai/gpt-5.3-codex-spark"
    }
  },
  "permission": {
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "write": "allow",
    "edit": "allow",
    "bash": "allow",
    "task": "allow",
    "skill": "allow",
    "question": "deny",
    "webfetch": "allow",
    "websearch": "allow",
    "codesearch": "allow",
    "external_directory": {
      "**": "allow",
      "*": "allow"
    }
  }
}
